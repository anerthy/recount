---
interface Props {
  id: string;
  icon: string;
  groupName: string;
  amountOwed: number;
}

const { id, icon, groupName, amountOwed } = Astro.props;
---

<a href={`/groups/${id}`}>
  <div
    class="flex items-center gap-4 rounded-xl bg-white p-4 shadow-sm cursor-pointer"
  >
    <div
      class="flex h-14 w-14 items-center justify-center rounded-lg bg-zinc-200 dark:bg-zinc-700"
    >
      <span
        class="material-symbols-outlined text-3xl text-zinc-600 dark:text-zinc-300"
        >{icon}</span
      >
    </div>
    <div class="grow">
      <p class="font-bold text-zinc-800 text-lg">{groupName}</p>

      {
        amountOwed > 0 ? (
          <p class="text-sm text-orange-500">Debes {amountOwed.toFixed(2)} €</p>
        ) : amountOwed < 0 ? (
          <p class="text-sm text-emerald-500">
            Te deben {Math.abs(amountOwed).toFixed(2)} €
          </p>
        ) : (
          <p class="text-sm text-zinc-500 dark:text-zinc-400">Estáis en paz</p>
        )
      }
    </div>
    <span class="material-symbols-outlined text-zinc-400">chevron_right</span>
  </div>
</a>
