---
interface Props {
  gradient?: 'blue' | 'purple';
}

const { gradient = 'blue' } = Astro.props;

const gradientClasses = {
  blue: 'from-blue-50 to-indigo-100',
  purple: 'from-purple-50 to-pink-100',
};
---

<div
  class={`min-h-screen flex items-center justify-center bg-linear-to-br ${gradientClasses[gradient]} px-4 py-12`}
>
  <div class="w-full max-w-md">
    <div class="bg-white rounded-2xl shadow-xl p-8">
      <slot />
    </div>
    <slot name="footer" />
  </div>
</div>
