---
interface Props {
  type: string;
  name: string;
  id: string;
  label: string;
  placeholder?: string;
  required?: boolean;
  hint?: string;
  color?: 'indigo' | 'purple';
}

const {
  type,
  name,
  id,
  label,
  placeholder,
  required = false,
  hint,
  color = 'indigo',
} = Astro.props;

const focusClasses = {
  indigo: 'focus:ring-indigo-500',
  purple: 'focus:ring-purple-500',
};
---

<div>
  <label for={id} class="block text-sm font-medium text-gray-700 mb-2">
    {label}
  </label>
  <input
    type={type}
    name={name}
    id={id}
    required={required}
    placeholder={placeholder}
    class={`w-full px-4 py-3 border border-gray-300 rounded-lg ${focusClasses[color]} focus:border-transparent transition-all outline-none`}
  />
  {hint && <p class="mt-2 text-xs text-gray-500">{hint}</p>}
</div>
