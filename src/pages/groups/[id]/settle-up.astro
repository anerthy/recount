---
import Layout from '@/layouts/Layout.astro';
---

<Layout title="Settle Up">
  <div class="bg-background-light dark:bg-background-dark font-display">
    <div
      class="relative mx-auto flex h-auto min-h-screen w-full max-w-md flex-col overflow-x-hidden group/design-root"
    >
      <header
        class="flex items-center bg-background-light dark:bg-background-dark p-4 pb-2 sticky top-0 z-10"
      >
        <div
          class="flex size-12 shrink-0 items-center justify-start text-zinc-800 dark:text-zinc-200"
        >
          <button
            class="flex max-w-[480px] cursor-pointer items-center justify-center overflow-hidden rounded-lg h-12 bg-transparent text-zinc-900 dark:text-white gap-2 text-base font-bold leading-normal tracking-[0.015em] min-w-0 p-0"
          >
            <span class="material-symbols-outlined">arrow_back</span>
          </button>
        </div>
        <h1
          class="text-zinc-900 text-lg font-bold leading-tight tracking-[-0.015em] flex-1 text-center"
        >
          Liquidar Deuda
        </h1>
        <div class="flex w-12 items-center justify-end"></div>
      </header>
      <main class="grow px-4 pb-32">
        <section class="mt-4">
          <p
            class="text-zinc-500 text-sm font-normal leading-normal text-center mb-4"
          >
            Vas a registrar un pago para
          </p>
          <div
            class="flex flex-col items-center gap-4 rounded-xl bg-white p-6 shadow-sm"
          >
            <img
              class="h-16 w-16 rounded-full object-cover"
              data-alt="Avatar de Javier"
              src="https://lh3.googleusercontent.com/aida-public/AB6AXuAoNEMmmUKkCQ7s1uAsNLFF_okktLwdKMeEo269vdbcLwu5UsBpxBOmTxMVfop9Rz4xgRJT_zhq-kctdJNK0Kcb1q0W8oI5Zm3bnJdIQbKReP1kU_EuTqHVzALuaYTir09PF6D8B1M2gNbhhZX3USr4kVBPYnSpVaOEtDABUKGysD3ANC_iQTzeqrOmo1WmkyaL9ze49OgLo4ZqeCYrBynmhWLTKgpJGbbAmh-1-CLUvXCpjxhV_qpfqikefh-6E99OrPAhrtIcag"
            />
            <div class="text-center">
              <p class="font-bold text-lg text-zinc-800">Javier</p>
              <p class="text-sm text-zinc-500">
                Le debes un total de <span class="font-bold text-orange-500"
                  >15,00 €</span
                >
              </p>
            </div>
          </div>
        </section>
        <section class="mt-8">
          <label
            class="block text-zinc-900 text-base font-bold leading-tight tracking-[-0.015em] pb-3"
            for="amount">Importe a liquidar</label
          >
          <div class="relative">
            <span
              class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-4 text-2xl font-bold text-zinc-400"
              >€</span
            >
            <input
              class="w-full rounded-xl border-zinc-300 bg-white py-4 pl-10 pr-4 text-right text-3xl font-bold text-zinc-900 placeholder-zinc-400 focus:border-primary focus:ring-primary"
              id="amount"
              type="text"
              value="15,00"
            />
          </div>
        </section>
        <section class="mt-6">
          <div class="grid grid-cols-2 gap-3">
            <button
              class="flex items-center justify-center gap-2 rounded-xl border border-primary bg-primary/20 p-4 text-primary h-14"
            >
              <span class="material-symbols-outlined text-xl">check_circle</span
              >
              <span class="text-sm font-bold">Pago completo</span>
            </button>
            <button
              class="flex items-center justify-center gap-2 rounded-xl border border-zinc-300 bg-transparent p-4 text-zinc-500 h-14"
            >
              <span class="material-symbols-outlined text-xl">pie_chart</span>
              <span class="text-sm font-bold">Pago parcial</span>
            </button>
          </div>
        </section>
        <section class="mt-8">
          <label
            class="block text-zinc-900 text-base font-bold leading-tight tracking-[-0.015em] pb-3"
            for="notes">Notas (Opcional)</label
          >
          <textarea
            class="w-full rounded-xl border-zinc-300 bg-white p-4 text-zinc-900 placeholder-zinc-400 focus:border-primary focus:ring-primary"
            id="notes"
            placeholder="Ej: Pago de la pizza del viernes"
            rows="3"></textarea>
        </section>
        <section class="mt-8">
          <label
            class="block text-zinc-900 text-base font-bold leading-tight tracking-[-0.015em] pb-3"
            for="receipt">Comprobante (Opcional)</label
          >
          <div
            class="relative flex h-32 w-full cursor-pointer flex-col items-center justify-center rounded-xl border-2 border-dashed border-zinc-300 bg-white text-center text-zinc-500 hover:border-primary hover:text-primary transition-colors"
          >
            <span class="material-symbols-outlined text-4xl">upload_file</span>
            <p class="mt-2 text-sm font-semibold">Subir imagen o PDF</p>
            <p class="text-xs">Tamaño máx. 5MB</p>
            <input
              class="absolute inset-0 h-full w-full opacity-0 cursor-pointer"
              id="receipt"
              type="file"
            />
          </div>
        </section>
      </main>
      <footer
        class="fixed bottom-0 left-0 right-0 mx-auto max-w-md bg-background-light p-4 pt-2"
      >
        <button
          class="flex w-full items-center justify-center gap-2 rounded-xl bg-primary p-4 text-center text-base font-bold text-zinc-900 h-14"
        >
          <span>Confirmar Pago</span>
        </button>
      </footer>
    </div>
  </div>
</Layout>
